{
  "name": "ccswitch",
  "version": "0.9.0",
  "description": "Claude Code configuration switcher - Git-based context management CLI",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test test/unit",
    "test:all": "bun test test/unit && bun test test/e2e",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test test/unit --coverage",
    "test:unit": "bun test test/unit",
    "test:e2e": "bun test test/e2e",
    "dev": "bun run index.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.2.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
